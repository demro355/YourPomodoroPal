{
  "manifest_version": 3,
  "name": "Your Pomodoro Pal",
  "version": "1.0",
  "description": "All work and no play makes Jack a tiresome chap",
  "icons": {
    "16": "images/pom16x16.png",
    "48": "images/pom48x48.png",
    "128": "images/pom128x128.png"
  },
  "action": {
    "default_icon": "images/pom128x128.png",
    "default_title": "Pomodoro Timer",
    "default_popup": "popup/popup.html"
  },
  "permissions": ["storage", "alarms", "notifications"],
  "background": {
    "service_worker": "background.js"
  }
}




